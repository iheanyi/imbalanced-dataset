
<div class="container">
  <h1>Dashboard Framework</h1>
  <div class="row">
    <div class="col-lg-4">

      <div class="card">
        <p><strong>Outlet for Previous Analyses?</strong></p>
      </div>
    </div>

    <div class="col-lg-8">
      <div class="card">
        <p><strong>Data Visualization Outlet/Component?</strong></p>
      </div>
    </div>
  </div>

  <div class="row top-buffer bottom-buffer">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Create New Analysis</h3>

        </div>

        <div class="container">

            <div class="panel-body">
                <div class="row">
                  <form class="form-inline" {{action "submit" on="submit"}}>

                      {{select-2
                              content=classifiers
                              optionLabelPath="name"
                              optionValuePath="name"
                              value=selectedClassifiers
                              text="name"
                              description="description"
                              placeholder="Please Select a Classifier"
                              id="selectedClassifiers"
                              multiple=true
                      }}


                    {{select-2
                            content=datasets
                            optionValuePath="name"
                            optionLabelPath="name"
                            text="name"
                            description="description"
                            placeholder="Please Select a Dataset"
                            id="selectedDatasets"
                            value=selectedDatasets
                            multiple=true
                    }}


                    <button class="btn btn-primary">Submit Analysis</button>
                  </form>


                </div>

              <div class="row">
                {{selectedClassifiers}} <br>
                {{selectedDatasets}}

                {{#each output in test_outputs}}
                  <li>{{output.content}} - {{output.precision_graph}}

                    <img {{bind-attr src=output.image_url}}>
                  </li>
                {{/each}}
              </div>

            </div>
          </div>
        </div>

    </div>
  </div>

  {{outlet}}
</div>
